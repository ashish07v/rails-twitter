<h1>Users</h1>
<h3><%= link_to 'Home', twitter_path %></h3>  
<table>
  <thead>
    <tr>
      <th>Username</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @followed.each do |user| %>
      <tr>
        <td><%= user.username %></td>
        <td><%= link_to 'unfollow', unfollow_user_path(user) %></td>    
      </tr>
    <% end %>
    <% @users_all.each do |user| %>
      <tr>
        <td><%= user.username %></td>
              
        <td><%= link_to 'Follow', follow_user_user_path(user) %></td>         
        <% # = link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %>        
      </tr>
    <% end %>
    
  </tbody>
</table>

<br>