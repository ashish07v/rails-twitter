<h1> All Topics </h1>
<h3><%= link_to 'Home', twitter_path %></h3>  
<table>
  <thead>
    <tr>
      <th>Topic name</th>
      <th > action</th>
    </tr>
  </thead>

  <tbody>

<% # = render 'all_topic', topic: @my_topics %>
<% @my_topics.each do |review| %>
	<tr>
	    
	    <% if @topic_id.include?(review.id)%>
	    <td><%= link_to review.topic_name, topic_tweet_path(review) %></td>
	    <td><%= link_to 'unfollow', unfollow_topic_path(review) %></td> 
	    <% else %>
	    <td><%= review.topic_name %></td>
	    <td><%= link_to 'follow', follow_topic_path(review) %></td> 
	    <% end %>   
	 </tr>

<% end %>

</tbody>
</table>

<br>

<%= link_to 'Back', twitter_path %>